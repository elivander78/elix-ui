{
  "name": "@elivander/elix-ui",
  "version": "0.2.29",
  "description": "Vue 3 UI Kit with theming and responsive design (beta version)",
  "type": "module",
  "keywords": [
    "vue",
    "vue3",
    "ui-kit",
    "components",
    "theming",
    "responsive",
    "design-system"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/elivander78/elix-ui.git"
  },
  "homepage": "https://github.com/elivander78/elix-ui#readme",
  "author": "elivander",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "main": "./lib/index.js",
  "module": "./es/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./es/index.js",
      "require": "./lib/index.js",
      "types": "./lib/index.d.ts"
    },
    "./styles": {
      "default": "./es/style.css"
    },
    "./styles.css": {
      "default": "./es/style.css"
    },
    "./button": {
      "import": "./es/components/Button/index.js",
      "require": "./lib/components/Button/index.js",
      "types": "./lib/components/Button/index.d.ts"
    },
    "./input": {
      "import": "./es/components/Input/index.js",
      "require": "./lib/components/Input/index.js",
      "types": "./lib/components/Input/index.d.ts"
    },
    "./card": {
      "import": "./es/components/Card/index.js",
      "require": "./lib/components/Card/index.js",
      "types": "./lib/components/Card/index.d.ts"
    },
    "./select": {
      "import": "./es/components/Select/index.js",
      "require": "./lib/components/Select/index.js",
      "types": "./lib/components/Select/index.d.ts"
    },
    "./modal": {
      "import": "./es/components/Modal/index.js",
      "require": "./lib/components/Modal/index.js",
      "types": "./lib/components/Modal/index.d.ts"
    }
  },
  "files": [
    "es",
    "lib",
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "vite build",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "test": "vitest"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "dependencies": {
    "@vue/shared": "^3.3.13"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.2",
    "@vue/test-utils": "^2.4.3",
    "jsdom": "^23.0.1",
    "sass": "^1.69.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-dts": "^3.6.4",
    "vitest": "^1.0.4",
    "vue": "^3.3.13",
    "vue-tsc": "^1.8.25"
  }
}
